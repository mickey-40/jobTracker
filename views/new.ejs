<%- include('./partials/header.ejs') %>
<div class="shadow p-3 mb-5 bg-white rounded ">
  <h1>Add A Job</h1>

    <form method="POST" action="/jobs">
      <fieldset class="mb-3">
        <label class="form-label" for="title">Title:</label>
        <input class="form-control" id="title" type="text" name="title" placeholder="Enter job title">
      </fieldset>
      <fieldset class="mb-3">
        <label class="form-label" for="location">Location:</label>
        <input class="form-control" id="location" type="text" name="location" placeholder="Enter Location">
      </fieldset>
      <fieldset class="mb-3">
        <label class="form-label" for="date">Date:</label>
        <input class="form-control" id="date" type="text" name="date" placeholder="Enter Date">
      </fieldset>
      <fieldset class="mb-3">
        <label class="form-label" for="interview">Got an interview: </label>
        <input class="form-check-label" id="interview" type="checkbox" name="interview">
      </fieldset>
      <button class="btn btn-primary">Add the job!</button>
    </form>
</div>
    <%- include('./partials/footer.ejs') %>
<%- include('./partials/header.ejs') %>
  <h1>My Jobs</h1>
  <ul class="row">
    <% for(let i = 0; i <jobs.length; i++){

      let jobNumber = i +1
    %>
      <div class="col-sm-6">
        
          <li class="card" style="width: 18rem; margin: 5px;">
            <div class="card-body">
              <a class="card-title" href="/jobs/<%= jobs[i].id%>"><%= jobs[i].title%></a><br>
              Location: <%=jobs[i].location%><br>
              Date: <%=jobs[i].date%><br>
              Got interview: <% if(jobs[i].interview=== true) {%> 
                              yes
                              <% } else {%>
                                not yet
                              <% } %>
                <br>
              <form action="/jobs/<%= jobs[i].id%>?_method=DELETE" method="POST">
              <input type="submit" value="DELETE">
              </form>
            </div>
          </li>
        
      </div>
    <% } %> 
  </ul>
  <%- include('./partials/footer.ejs') %>